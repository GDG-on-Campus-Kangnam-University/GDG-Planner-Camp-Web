generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  user_id  Int    @id @default(autoincrement())
  password Int
  name     String
  balance  Int
  role     String
  team_id  Int?
  team     Team?  @relation(fields: [team_id], references: [team_id])

  purchases Purchase[]

  @@map("user")
}

model Team {
  team_id    Int      @id @default(autoincrement())
  name       String
  product_id Int?
  product    Product? @relation(fields: [product_id], references: [product_id])

  revenue  Int
  users    User[]
  settings GlobalSetting?

  @@map("team")
}

model Product {
  product_id  Int    @id @default(autoincrement())
  name        String
  picture     String
  status      String
  description String

  models Model[]
  teams  Team[]

  @@map("product")
}

model Model {
  model_id    Int      @id @default(autoincrement())
  name        String
  total_count Int
  price       Int
  description String
  product_id  Int?
  product     Product? @relation(fields: [product_id], references: [product_id])

  purchases Purchase[]

  @@map("model")
}

model Purchase {
  purchase_id   Int      @id @default(autoincrement())
  user_id       Int
  model_id      Int
  quantity      Int
  purchase_date DateTime

  user  User  @relation(fields: [user_id], references: [user_id])
  model Model @relation(fields: [model_id], references: [model_id])

  @@map("purchase")
}

model GlobalSetting {
  id      Int     @id @default(autoincrement())
  team_id Int     @unique
  blurred Boolean

  team Team @relation(fields: [team_id], references: [team_id])

  @@map("global_setting")
}
